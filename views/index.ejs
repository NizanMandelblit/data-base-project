<!--update page content-->
<% if(pageName == "update page") { %>

    <div class="container">
        <form id="my-form" class="" action="/update" method="post">
            <div class="form-group">
                <label for="exampleFormControlSelect1">1.where did you visit?</label>
                <select class="form-control" name="place" required>
                    <option>airbnb</option>
                    <option>restaurants</option>
                    <option>hotels</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">2.enter yor name:</label>
                <div class="row">
                    <div class="col">
                        <input type="text" class="form-control" name="FirstName" placeholder="First name">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="LastName" placeholder="Last name">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">3.enter the id of the place</label>
                <input type="number" name="id" class="form-control" placeholder="e.g 132" required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">4.enter the grade you give to the place</label>
                <input type="number" name="grade" min="1" max="100" class="form-control" placeholder="1-100" required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">5.enter your comments please:</label>
                <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <button id="sumbitbtn" type="submit" class="btn btn-primary">Submit</button>

            <button id="loadingbtn" class="btn btn-primary" type="button" disabled style="display: none">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Loading...
            </button>
        </form>

    </div>

<% } %>

<!--delete page content-->
<% if(pageName == "delete page") { %>
    <div class="container">


        <form id="my-form" class="" action="/delete" method="post">
            <div class="form-group">
