                    <option>Creole/Cajun</option>
                    <option>Portuguese</option>
                    <option>Iranian</option>
                    <option>Polynesian</option>
                    <option>Czech</option>
                </select>

            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">2.enter maximum distance you want to affect the search</label>
                <input type="double" class="form-control" placeholder="e.g 12.5" name="distance">
            </div>

            <div class="form-row align-items-center">
                <label for="exampleFormControlInput1">3.enter the requested rating for the restaurants</label>
                <input id="requireform" type="number" class="form-control" placeholder="Max" name="maxRateRestaurant"
                       required>
                <input id="requireform" type="number" class="form-control" placeholder="Min" name="minRateRestaurant"
                       required>
            </div>


            <div class="form-row align-items-center">
                <label for="exampleFormControlInput1">4.enter the requested price for a night in $</label>
                <input id="requireform" type="number" class="form-control" placeholder="Max" name="maxNightCost"
                       required>
                <input id="requireform" type="number" class="form-control" placeholder="Min" name="minNightCost"
                       required>
            </div>
            <div class="form-row align-items-center">
                <label for="exampleFormControlInput1">5.enter the requested rating for the hotel or airbnb</label>
                <input id="requireform" type="number" class="form-control" placeholder="Max" name="maxRateHA" required>
                <input id="requireform" type="number" class="form-control" placeholder="Min" name="minRateHA" required>
            </div>
            <label for="exampleFormControlInput1">6.do you want to avoid restaurants with critical reviews?</label>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="critical">
                <label class="form-check-label" for="exampleCheck1"> </label>

            </div>
            <label for="exampleFormControlInput1">7.do you want to find airbnb of super hosts only?</label>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="super">
                <label class="form-check-label" for="exampleCheck1"> </label>

            </div>
            <button id="sumbitbtn" type="submit" class="btn btn-primary">Submit</button>

            <button id="loadingbtn" class="btn btn-primary" type="button" disabled style="display: none">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Loading...
            </button>

        </form>

    </div>
